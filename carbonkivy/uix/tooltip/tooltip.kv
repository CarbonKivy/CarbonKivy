<CTooltip>:
    canvas.before:
        Color:
            rgba: self.bg_color
        Rectangle:
            pos: self.pos
            size: self.size
        Triangle:
            points: 
                { \
                "Downward": [ \
                self.element_x - dp(6), 
                self.y, \
                self.element_x + dp(6), \
                self.y, \
                self.element_x, \
                self.y - dp(6), \
                ], \
                "Upward": [ \
                self.element_x - dp(6), 
                self.y + self.height, \
                self.element_x + dp(6), \
                self.y + self.height, \
                self.element_x, \
                self.y + self.height + dp(6), \
                ], \
                }[self._pointer]
    bg_color: app.background_inverse
    text_color: app.text_inverse
    size_hint: None, None
    width: min(dp(288), self.width)
    height: self.minimum_height
    padding: [dp(16), dp(8), dp(16), dp(8)]

    CLabel:
        text: root.text
        color: root.text_color
        style: "body_01"