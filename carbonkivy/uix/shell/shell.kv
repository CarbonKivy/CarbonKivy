#: import Window kivy.core.window.Window

<UIShell>:
    size_hint: 1, 1

<UIShellHeader>:
    canvas.before:
        Color:
            rgba: app.border_subtle_01
        Line:
            width: dp(0.5)
            points: [self.x + dp(8.25), self.y + dp(0.25), self.right - dp(8.25), self.y + dp(0.25)]
    size_hint: 1, None
    height: dp(56)
    padding: [dp(8), dp(8), dp(8), 0]
    bg_color: app.background

<UIShellHeaderName>:
    size_hint: None, 1
    size: self.texture_size
    text_size: None, self.texture_size[1]
    style: "heading_compact_01"
    text_color: app.text_primary
    line_color_focus: app.focus
    padding: [dp(16), 0, dp(32), 0]


<UIShellButton>:
    text_color: app.icon_primary
    text_color_hover: self.text_color
    text_color_focus: self.text_color
    role: "Large Productive"


<UIShellHeaderMenuButton>:
    icon: "close" if self.active else "menu"
    role: "Large Productive"
    bg_color: app.transparent if not self.active else app.background_selected
    on_touch_down:
        self.active = (not self.active) if self.focus else self.active


<UIShellLeftPanel>:
    bg_color: app.background
    overlay: app.overlay
    size_hint:  None, 1
    width: dp(256)
    visibility: False
    opacity: 0
    pos_hint: {'right': 0}


<UIShellRightPanel>:
    bg_color: app.background_selected
    overlay: app.overlay
    size_hint:  None, 1
    width: dp(256)
    opacity: 0
    visibility: False
    pos_hint: {'right': 1}


<UIShellLayout>:
    size_hint: 1, 1
    padding: [dp(8), dp(64), dp(8), dp(8)]
