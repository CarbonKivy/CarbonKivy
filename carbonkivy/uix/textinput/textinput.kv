<CTextInput>:
    size_hint: 1, None
    height: ctextinput_area.height
    inset_color: app.transparent
    bg_color: app.field_01
    line_color: app.focus
    _line_color: self.bg_color
    inset_width: 0
    hover_color: app.field_hover_01
    hint_text: "Placeholder"

    CTextInputArea:
        id: ctextinput_area
        hint_text: root.hint_text

<CTextInputLabel>:
    color: app.text_secondary
    style: "label_01"
    pos: [0, self.parent.height + (self.height/2)]
    adaptive: [False, True]

<CTextInputHelperText>:
    color: app.text_helper
    style: "helper_text_01"
    pos: [0, -self.height]
    adaptive: [False, True]

<CTextInputTrailingIconButton>:
    text_color: app.icon_primary
    pos_hint: {'center_y': 0.5}
    pos: [self.parent.width - (self.width + dp(8)), self.pos[1]]

<CTextInputArea@TextInput>:
    canvas.after:
        Color:
            rgba: app.border_strong_01
        SmoothLine:
            points: [self.x, self.y, self.right, self.y]
            width: dp(1)
    padding: [dp(16), dp(16), dp(48), dp(16)]
    size_hint_y: None
    font_size: plex_14
    height: self.minimum_height
    background_normal: ""
    background_color: app.transparent
    background_active: ""
    hint_text_color: app.text_placeholder
    foreground_color: app.text_primary
    cursor_color: app.text_primary
