<CModal>:
    background_color: app.layer_01
    background_normal: ""
    background: ""
    overlay_color: app.overlay

<CModalLayout>:
    size_hint: 1, 1

<CModalBody>:
    size_hint: 1, 1
    padding: dp(16)
    spacing: dp(16)

<CModalBodyContent>:
    style: "body_01"
    color: app.text_primary

<CModalHeader>:
    adaptive: [False, True]
    padding: dp(16)
    spacing: dp(4)

<CModalFooter>:
    adaptive: [False, True]
    spacing: dp(16)

<CModalHeaderLabel>:
    style: "label_01"
    color: app.text_secondary

<CModalHeaderTitle>:
    style: "heading_03"
    color: app.text_primary

<CModalCloseButton>:
    icon: "close"
    text_color: app.icon_primary
    font_size: plex_20
    pos_hint: {'right': 1.0, 'top': 1.0}
    on_press:
        self.parent.dismiss()