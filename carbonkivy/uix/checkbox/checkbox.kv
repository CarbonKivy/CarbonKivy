<CCheckbox>:
    icon: "checkmark" if self.active else "blank"
    color: app.icon_inverse
    bg_color: app.text_primary if self.active else app.transparent
    radius: dp(4)
    font_size: plex_16
    size: [plex_20, plex_20]
    inset_width: dp(0)
    line_color: app.text_primary
    line_color_focus: app.focus
    line_width: dp(1)