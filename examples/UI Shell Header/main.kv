<HomeScreen>:

    UIShell:
        id: left_panel_shell

        UIShellLeftPanel:
            panel_shell: left_panel_shell
            visibility: shell_menu_btn.active

            UIShellPanelLayout:

                UIShellPanelSelectionLayout:

                    UIShellPanelSelectionItem:
                        default: True
                        text: "Home"
                        right_icon: "home"

                    UIShellPanelSelectionItem:
                        text: "Profile"
                        right_icon: "account"

    UIShell:
        id: right_panel_shell

        UIShellRightPanel:
            panel_shell: right_panel_shell
            visibility: shell_switcher_btn.focus

    UIShell:
        id: shell

        UIShellHeader:
            id: shell_header

            UIShellHeaderMenuButton:
                id: shell_menu_btn

            UIShellHeaderName:
                text: "Header name"

            CAnchorLayout:
                anchor_x: "right"

                CGridLayout:
                    adaptive: [True, True]
                    rows: 1

                    UIShellButton:
                        icon: "search"

                    UIShellButton:
                        id: shell_switcher_btn
                        icon: "switcher"
