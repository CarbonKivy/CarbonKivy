<HomeScreen>:

    UIShell:
        id: left_panel_shell

        UIShellLeftPanel:
            panel_shell: left_panel_shell
            visibility: shell_menu_btn.active

            UIShellPanelLayout:

                CLabel:
                    text: "Hello"

    UIShell:
        id: right_panel_shell

        UIShellRightPanel:
            panel_shell: right_panel_shell
            visibility: shell_switcher_btn.focus

    UIShell:
        id: shell

        UIShellHeader:
            id: shell_header

            UIShellHeaderMenuButton:
                id: shell_menu_btn

            UIShellHeaderName:
                text: "Header name"
            
            CButtonGhost:
                id: shell_switcher_btn
                icon: "switcher"
