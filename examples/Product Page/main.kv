<ProductScreen>:

    CStackLayout:
        size_hint: 1, 1

        CRelativeLayout:
            id: imagelayout
            size_hint: 1, None
            height: productimage.height

            CImage:
                id: productimage
                source: "nikeshoes.png"
                ratio: [7, 8]
                fit_mode: "cover"

            CBoxLayout:
                orientation: "vertical"
                adaptive: [False, True]
                padding: [dp(16), dp(16), dp(16), dp(16)]
                pos_hint: {"top": 1}

                CButtonGhost:
                    icon: "arrow--left"
                    spacing: 0
                    text_color: app.text_primary

        InfoLayout:
            orientation: "vertical"
            adaptive: [False, True]
            padding: [dp(16), dp(8), dp(16), dp(8)]

<InfoLayout@CBoxLayout>:
    CBoxLayout:
        adaptive: [False, True]

        CLabel:
            text: "Nike Quest 6"
            style: "heading_05"
            color: app.text_primary
            pos_hint: {"center_y": 0.5}

        CButtonGhost:
            icon: "favorite"
            spacing: 0
            pos_hint: {"center_y": 0.5}
            text_color: app.text_primary